<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=""
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    tools:context=".MainActivity" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/orange"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutor Registration"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="50"
            android:textSize="28dp"


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="125dp"
        android:text="Name :"
        android:textSize="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Email :"
        android:textSize="20dp"
        android:id="@+id/Email"
        android:layout_below="@+id/edittext"
        android:layout_alignRight="@+id/Name"
        android:layout_alignEnd="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Password :"
        android:textSize="20dp"
        android:id="@+id/Password"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />


    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/PostalCode"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_alignBottom="@+id/Password"
        android:layout_below="@+id/editText"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:text="State :"
        android:textSize="20dp"
        android:id="@+id/State"
        android:layout_below="@+id/Country"

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:text="City :"
        android:textSize="20dp"
        android:id="@+id/City"
        android:layout_below="@+id/State"

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_city"
        android:background="editbox"
        android:layout_alignBottom="@+id/City"
        android:layout_alignLeft="@+id/spinner_states"
        android:layout_alignStart="@+id/spinner_states"
        tools:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/spinner_states"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Enter your e-mail"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textAppearance="@android:style/TextAppearance"
        tools:background="@android:drawable/editbox_background_normal"
        android:layout_alignBaseline="@+id/Email"
        android:layout_alignBottom="@+id/Email"
        android:layout_toRightOf="@+id/Email"
        android:layout_toEndOf="@+id/Email" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="text"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_alignBaseline="@+id/Name"
        android:layout_alignBottom="@+id/Name"
        android:layout_toRightOf="@+id/Name"
        android:layout_toEndOf="@+id/Name" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxM"
        android:text="M"
        android:textSize="20dp"
        android:onClick="onCheckboxClicked"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_above="@+id/checkBoxF"
        android:layout_alignLeft="@+id/checkBoxF"
        android:layout_alignStart="@+id/checkBoxF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_alignLeft="@+id/spinner_city"
        android:layout_alignStart="@+id/spinner_city"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/spinner_city"
        android:layout_alignRight="@+id/checkBoxM"
        android:layout_alignEnd="@+id/checkBoxM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="14dp"
        android:text="Postal Code :"
        android:textSize="20dp"
        android:id="@+id/PostalCode"
        android:layout_below="@+id/PostalAddress"

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/PostalCode"
        android:id="@+id/editText5"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_toRightOf="@+id/PhoneNumber"
        android:layout_toEndOf="@+id/PhoneNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:text="Contact number :"
        android:textSize="20dp"
        android:id="@+id/PhoneNumber"
        android:layout_below="@+id/PostalCode"

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:layout_toRightOf="@+id/spinner_countrycode"
        android:layout_toEndOf="@+id/spinner_countrycode"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_alignBottom="@+id/PhoneNumber"
        android:layout_below="@+id/editText5" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_countrycode"
        android:spinnerMode="dropdown"
        android:dropDownWidth="wrap_content"
        android:background="@android:drawable/spinner_dropdown_background"
        android:entries="countrycode"
        android:layout_below="@+id/editText5"
        android:layout_toEndOf="@+id/PhoneNumber"
        android:layout_toRightOf="@+id/PhoneNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:text="Postal address :"
        android:textSize="20dp"
        android:id="@+id/PostalAddress"
        android:layout_below="@+id/City"

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textPostalAddress"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_above="@+id/editText5"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/spinner_city"
        android:layout_toRightOf="@+id/PhoneNumber"
        android:layout_toEndOf="@+id/PhoneNumber" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_states"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/Country"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignBottom="@+id/State" />

    <TextView
        android:text="@string/sutra1eng"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/Country"
        android:layout_toEndOf="@+id/Country" />

    <TextView
        android:text="@string/sutra1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/Password"
        android:layout_toEndOf="@+id/Password" />

    <TextView
        android:text="@string/sutra1exp"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/PhoneNumber"
        android:layout_alignStart="@+id/PhoneNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country :"
        android:textSize="20dp"
        android:id="@+id/Country"
        android:layout_below="@+id/Password"
        android:layout_alignLeft="@+id/State"
        android:layout_alignStart="@+id/State"
        android:layout_marginTop="6dp" />

    <Spinner
        android:id="@+id/spinner"
        android:text="Select your country"
        android:entries="countries_array"
        android:dropDownWidth="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@color/white"
        android:layout_height="25dp"
        android:layout_width="230dp"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <CheckBox
        android:text="F"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxF"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_below="@+id/Name"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />


</RelativeLayout>
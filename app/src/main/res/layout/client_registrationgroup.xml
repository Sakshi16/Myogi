<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=""
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    tools:context=".MainActivity" >

    <RadioButton
        android:text="Yes"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/yes"
        android:button="@android:drawable/radiobutton_off_background"
        android:layout_below="@+id/groupques"
        android:layout_alignLeft="@+id/groupques"
        android:layout_alignStart="@+id/groupques" />

    <RadioButton
        android:text="No"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no"
        android:button="@android:drawable/radiobutton_off_background"
        android:layout_alignBaseline="@+id/yes"
        android:layout_alignBottom="@+id/yes"
        android:layout_toRightOf="@+id/yes"
        android:layout_toEndOf="@+id/yes"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp" />

    <TextView
        android:text="*Plese note that some personal tutors might not teach in groups. Hence, we advise you to choose wisely."
        android:textStyle="italic"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/yes"
        android:layout_alignLeft="@+id/yes"
        android:layout_alignStart="@+id/yes" />

    <TextView
        android:id="@+id/groupques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="67dp"
        android:text="Do you want to register for a group?"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText16"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignRight="@+id/groupques"
        android:layout_alignEnd="@+id/groupques" />

    <CheckBox
        android:text="Tuesday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:text="Wednesday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:text="Thursday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox4"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:text="Friday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox5"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:text="Saturday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox6"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_below="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5" />

    <CheckBox
        android:text="Sunday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox7"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_below="@+id/checkBox6"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/hours3"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="0:00 hrs"
        android:textSize="10dp"
        android:textStyle="italic"
        android:inputType="time"
        android:layout_below="@+id/Time"
        android:layout_alignLeft="@+id/hours"
        android:layout_alignStart="@+id/hours"
        android:layout_alignRight="@+id/hours"
        android:layout_alignEnd="@+id/hours" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/hours5"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="0:00 hrs"
        android:textSize="10dp"
        android:textStyle="italic"
        android:inputType="time"
        android:layout_below="@+id/hours3"
        android:layout_alignLeft="@+id/hours3"
        android:layout_alignStart="@+id/hours3"
        android:layout_alignRight="@+id/hours3"
        android:layout_alignEnd="@+id/hours3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40dp"
        android:id="@+id/to2"
        android:layout_marginTop="14dp"
        android:layout_alignTop="@+id/editText9"
        android:layout_alignLeft="@+id/to1"
        android:layout_alignStart="@+id/to1" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/AddMore"
        android:background="@android:drawable/ic_input_add"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/hours6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/hours"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="0:00 hrs"
        android:textSize="10dp"
        android:textStyle="italic"
        android:inputType="time"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/Time"
        android:layout_toRightOf="@+id/Time"
        android:layout_alignRight="@+id/checkBox4"
        android:layout_alignEnd="@+id/checkBox4" />

    <CheckBox
        android:text="Monday"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:button="@android:drawable/checkbox_off_background"
        android:layout_alignBaseline="@+id/Days"
        android:layout_alignBottom="@+id/Days"
        android:layout_alignLeft="@+id/no"
        android:layout_alignStart="@+id/no" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/hours6"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="24:00 hrs"
        android:textSize="10dp"
        android:textStyle="italic"
        android:inputType="time"
        android:layout_below="@+id/hours4"
        android:layout_alignRight="@+id/AddMore"
        android:layout_alignEnd="@+id/AddMore" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:hint="24.00hrs"
        android:textSize="10dp"
        android:textStyle="italic"
        android:id="@+id/editText9"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_width="80dp"
        android:layout_alignBaseline="@+id/hours"
        android:layout_alignBottom="@+id/hours"
        android:layout_alignLeft="@+id/hours6"
        android:layout_alignStart="@+id/hours6" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/hours4"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="24:00 hrs"
        android:textSize="10dp"
        android:textStyle="italic"
        android:inputType="time"
        android:layout_alignBaseline="@+id/hours3"
        android:layout_alignBottom="@+id/hours3"
        android:layout_alignLeft="@+id/editText9"
        android:layout_alignStart="@+id/editText9" />

    <TextView
        android:text="Add More"
        android:textSize="10dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/to3"
        android:layout_toLeftOf="@+id/AddMore"
        android:layout_toStartOf="@+id/AddMore" />

    <TextView
        android:text="Where will you teach?"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:id="@+id/teachwhere"
        android:layout_below="@+id/AddMore"
        android:layout_alignLeft="@+id/Days"
        android:layout_alignStart="@+id/Days"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />

    <RadioButton
        android:text="My residence"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/residence"
        android:button="@android:drawable/radiobutton_off_background"
        android:layout_below="@+id/teachwhere"
        android:layout_alignLeft="@+id/teachwhere"
        android:layout_alignStart="@+id/teachwhere" />

    <RadioButton
        android:text="Client's residence"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c_residence"
        android:button="@android:drawable/radiobutton_off_background"
        android:layout_below="@+id/residence"
        android:layout_alignLeft="@+id/residence"
        android:layout_alignStart="@+id/residence" />

    <RadioButton
        android:text="Workplace"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5"
        android:button="@android:drawable/radiobutton_off_background"
        android:layout_below="@+id/c_residence"
        android:layout_alignLeft="@+id/c_residence"
        android:layout_alignStart="@+id/c_residence" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Time availability :"
        android:textSize="20dp"
        android:id="@+id/Time"
        android:layout_below="@+id/checkBox7"
        android:layout_alignLeft="@+id/Days"
        android:layout_alignStart="@+id/Days" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40dp"
        android:id="@+id/to1"
        android:layout_below="@+id/checkBox7"
        android:layout_toRightOf="@+id/checkBox3"
        android:layout_toEndOf="@+id/checkBox3"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40dp"
        android:id="@+id/to3"
        android:layout_below="@+id/to1"
        android:layout_alignLeft="@+id/to2"
        android:layout_alignStart="@+id/to2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. of people in a group class :"
        android:textSize="20dp"
        android:id="@+id/Cost"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/to1"
        android:layout_alignEnd="@+id/to1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days available:"
        android:textSize="20dp"
        android:id="@+id/Days"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="Min. charge per person :"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/Cost"
        android:layout_alignLeft="@+id/Cost"
        android:layout_alignStart="@+id/Cost" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_above="@+id/textView9"
        android:layout_toRightOf="@+id/Cost"
        android:layout_toEndOf="@+id/Cost"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/editText17"
        android:layout_alignTop="@+id/Cost"
        android:background="@android:drawable/editbox_background_normal" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@color/orange"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Cost"
        android:layout_alignStart="@+id/Cost"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Registration"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="50"
            android:textSize="28dp"


    </android.support.v7.widget.Toolbar>

